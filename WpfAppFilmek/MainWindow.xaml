<Window x:Class="WpfAppFilmek.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppFilmek"
        mc:Ignorable="d"
        Title="Filmek" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>
        <DataGrid x:Name="FilmekDG" Grid.Column="1" />
        <StackPanel>
            <Button Content="Filmek betöltése" Click="FilmBetolt_Click" Margin="5"/>
            <Button Content="Hány film van" Click="FilmekSzama_Click" Margin="5"/>
            <Button Content="Leghosszabb film" Click="LeghosszabbFilmClick" Margin="5"/>
            <Button Content="Átlag értékelés" Margin="5" Click="AtlagErtekeles"/>
            <Button Content="Csak sci-fi" Margin="5" Click="CsakScifiSzures"/>
            <Button Content="Csak címek" Margin="5" Click="CsakCimek"/>
            <Button Content="Jol ertekelt filmek" Margin="5" Click="jolErtekelt"/>
            <Button Content="Rendezés cím szerint" Margin="5" Click="cimRend"/>

        </StackPanel>


    </Grid>
</Window>
